<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<div class="wrapper">
			<%- include('partials/modal') %> <%- include('partials/header') %>
			<div class="content">
				<div class="pizza_cards_container row my-5">
					<form
						id="signup_form"
						class="w-75 mx-auto"
						enctype="multipart/form-data"
						action="/pizza/<%= pizza._id %>"
						method="POST"
					>
						<div>
							<h1><%= pizza.title %></h1>
						</div>
						<!-- <div>
							<img src="images/pizza.jpg" alt="pizza" />
                        </div> -->

						<div class="row">
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">ID</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											id="name"
											type="text"
											value="<%= pizza._id %>"
											disabled
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Title</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="title"
											type="text"
											value="<%= pizza.title %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Description</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="description"
											type="text"
											value="<%= pizza.description %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Category</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="category"
											type="text"
											value="<%= pizza.category %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Hotness</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="hotness"
											type="text"
											value="<%= pizza.hotness %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Price</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="price"
											type="text"
											value="<%= pizza.price %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Image</label>
										<input
											class="input-sm col-12 col-sm-6"
											type="file"
											accept="image/*"
											name="photo"
										/>
									</div>
								</div>
							</div>
						</div>

						<div class="row justify-content-between m-0">
							<button type="submit" class="py-1 col-lg-6 col-12 button">
								Delete
							</button>
							<button type="submit" class="py-1 col-lg-6 col-12 button">
								Update
							</button>
						</div>
					</form>
				</div>
			</div>
			<%- include('partials/footer') %>
		</div>
		<script src="/script.js"></script>
	</body>
</html>
