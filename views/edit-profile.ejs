<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<div class="wrapper">
			<%- include('partials/modal') %> <%- include('partials/header') %>
			<div class="content">
				<div class="pizza_cards_container row my-5">
					<form
						id="signup_form"
						class="w-75 mx-auto"
						enctype="multipart/form-data"
						action="/users/<%= data._id %>"
						method="POST"
					>
						<div>
							<h1>Update Profile</h1>
						</div>
						<!-- <div>
							<img src="images/pizza.jpg" alt="pizza" />
                        </div> -->

						<div class="row">
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Name </label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="name"
											type="text"
											value="<%= data.name %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Email</label>
										<input
											class="form-control input-sm col-12 col-sm-6"
											name="email"
											type="text"
											value="<%= data.email %>"
										/>
									</div>
								</div>
							</div>
							<div class="col-12 col-xl-6">
								<div class="form-group pb-1">
									<div class="row">
										<label for="" class="col-12 col-sm-6">Avatar</label>
										<input
											class="input-sm col-12 col-sm-6"
											type="file"
											accept="image/*"
											name="avatar"
										/>
									</div>
								</div>
							</div>
						</div>

						<div class="row justify-content-between m-0">
							<button type="submit" class="py-1 col-lg-6 col-12 button">
								Reset
							</button>
							<button type="submit" class="py-1 col-lg-6 col-12 button">
								Update
							</button>
						</div>
					</form>
				</div>
			</div>
			<%- include('partials/footer') %>
		</div>
		<script src="/script.js"></script>
	</body>
</html>
