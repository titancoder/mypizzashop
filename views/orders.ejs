<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<div class="wrapper">
			<%- include('partials/modal') %> <%- include('partials/header') %>
			<div class="content">
				<div class="pizza_cards_container row my-5 d-flex">
					<div class="m-auto page-heading">Orders</div>
					<% data.forEach(function(item){ %>

					<a
						class="col-12"
						href="/orders/<%= item._id %>"
						style="color: black;"
					>
						<div class="row m-0 text-center order_list">
							<div class="order-date col-6 col-md">
								<!-- <div class="d-flex">
									<div class="month_">
										JUL
									</div>
									<div class="day_">
										<div class="d-flex flex-column">
											<div class="day p-1">
												12
											</div>
											<div class="year">
												2020
											</div>
										</div>
									</div>
								</div> -->
								<%- item.createdAt %>
							</div>
							<div class="order-no col-6 col-md">
								<%= item._id.slice(-8).toUpperCase() %>
							</div>
							<div class="order-address col-12 col-md">
								address
							</div>
							<div class="order-amount col-6 col-md">
								<%= item.amount %>
							</div>
							<div class="order-status col-6 col-md">
								<%= item.status.toUpperCase() %>
							</div>
						</div>
					</a>

					<% }) %>
				</div>
			</div>
			<%- include('partials/footer') %>
		</div>
		<script src="script.js"></script>
	</body>
</html>
