<div class="header d-block d-sm-flex justify-content-between py-1">
	<div class="brand d-flex justify-content-between">
		<h3 class="px-3 my-auto">YumYum Pizza</h3>
		<div class="m-0 p-0 d-flex" style="position: relative;">
			<a href="/cart"><img src="/images/cart.svg" alt="" /></a>
			<div class="cart-qty p-0 d-flex justify-content-center">
				<span id="cart-qty" style="font-size: 0.8rem;">0</span>
			</div>
		</div>
		<div
			id="toggle_menu"
			class="px-3 d-sm-none my-auto"
			style="cursor: pointer;"
		>
			<i id="toggle" class="fa fa-bars"></i>
		</div>
	</div>

	<ul id="nav_menu" class="menu_items d-sm-flex my-auto px-3 text-center">
		<% if (locals.role==='alpha'){ %>
		<li class="py-sm-0 py-2 my-auto"><a href="/">Home</a></li>
		<li class="py-sm-0 py-2 my-auto"><a href="/users">Users</a></li>
		<li class="py-sm-0 py-2 my-auto"><a href="/pizza">Pizza</a></li>
		<li class="py-sm-0 py-2 my-auto"><a href="/orders">Orders</a></li>
		<li class="py-sm-0 p-2 profile_name my-auto">
			<a
				href="/profile"
				class="d-flex justify-content-center"
				style="color: #1c9c87;"
			>
				<img
					style="height: 100%;"
					class="rounded-circle p-1 my-auto"
					src="/images/thumbnails/_t5065548f1fed45385254b6545c0d.jpg"
					alt=""
				/>
				<span class="my-auto">
					<%= locals.name.split(" ")[0] %>
				</span>
			</a>
		</li>
		<li class="py-sm-0 py-2 my-auto"><a href="/logout">Log Out</a></li>

		<% } %> <% if (locals.role==='delta'){ %>
		<li class="py-sm-0 py-2 my-auto"><a href="/">Home</a></li>
		<li class="py-sm-0 py-2 my-auto"><a href="/orders">Orders</a></li>
		<li class="py-sm-0 py-2 my-auto"><a href="/contact">Contact</a></li>
		<li class="py-sm-0 p-2 profile_name my-auto">
			<a
				href="/profile"
				class="d-flex justify-content-center"
				style="color: #1c9c87;"
			>
				<img
					style="height: 100%;"
					class="rounded-circle p-1 my-auto"
					src="<%= locals.img %>"
					alt=""
				/>
				<span class="my-auto">
					<%= locals.name.split(" ")[0] %>
				</span>
			</a>
		</li>
		<li class="py-sm-0 py-2 my-auto"><a href="/logout">Log Out</a></li>
		<% } %> <% if (!locals.role){ %>
		<li class="py-sm-0 py-2">Home</li>
		<li class="py-sm-0 py-2">About Us</li>
		<li class="py-sm-0 py-2">Contact</li>
		<li class="py-sm-0 py-2" onclick="openLoginForm()">Login</li>

		<% } %>
	</ul>
</div>
